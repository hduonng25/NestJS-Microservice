{
    "name": "nest-micro",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "npx prettier --write \"!**/build\" \"**/*.{ts,tsx,md,js,json}\"",
        "start": "nest build && pm2 start ecosystem.config.js --env prod",
        "start:dev": "nest build && pm2 start ecosystem.config.js --env dev",
        "restart": "nest build && pm2 restart all",
        "stop": "pm2 stop all",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/nest-micro/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/nest-micro/test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/class-transformer": "^0.4.0",
        "@nestjs/common": "^10.4.1",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.4.1",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/microservices": "^10.4.1",
        "@nestjs/mongoose": "^10.0.10",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.4.1",
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "mongoose": "^8.5.4",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.4",
        "@nestjs/schematics": "^10.1.4",
        "@nestjs/testing": "^10.4.1",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.16.1",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^@app/app(|/.*)$": "<rootDir>/libs/app/src/$1",
            "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
            "^@app/result(|/.*)$": "<rootDir>/libs/result/src/$1",
            "^@app/sercurity(|/.*)$": "<rootDir>/libs/sercurity/src/$1",
            "^@app/security(|/.*)$": "<rootDir>/libs/security/src/$1"
        }
    }
}
